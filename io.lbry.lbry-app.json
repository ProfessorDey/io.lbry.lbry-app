{
    "app-id": "io.lbry.lbry-app",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "lbry-app",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home:rw",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "NPM_CONFIG_LOGLEVEL": "info"
        }
    },
    "modules": [
        {
            "name": "libsecret",
            "config-opts": [
                "--disable-static",
                "--disable-gtk-doc",
                "--disable-manpages"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.gnome.org/browse/libsecret/snapshot/libsecret-0.18.5.tar.xz",
                    "sha256": "10324718e9abe47e208d6e6d05b6ea4232e1de58409bcacc9b2ced69d0496071"
                }
            ]
        },
        {
            "name": "libnotify",
            "cleanup": [ "/bin" ],
            "config-opts": [
                "--disable-static",
                "--disable-tests",
                "--disable-introspection"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libnotify/0.7/libnotify-0.7.7.tar.xz",
                    "sha256": "9cb4ce315b2655860c524d46b56010874214ec27e854086c1a1d0260137efc04"
                }
            ]
        },
        {
            "name": "nodejs",
            "cleanup": [
                "/include",
                "/share",
                "/app/lib/node_modules/npm/changelogs",
                "/app/lib/node_modules/npm/doc",
                "/app/lib/node_modules/npm/html",
                "/app/lib/node_modules/npm/man",
                "/app/lib/node_modules/npm/scripts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://nodejs.org/dist/v8.11.1/node-v8.11.1.tar.gz",
                    "sha256": "86678028f13b26ceed08efc4b838921ca1bf514c0b7e8151bfec8ba15c5e66ad"
                }
            ]
        },
        {
            "name": "yarn",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/yarn",
                "cp -a * /app/share/yarn/",
                "ln -s /app/share/yarn/bin/yarn /app/bin/yarn",
                "ln -s /app/share/yarn/bin/yarnpkg /app/bin/yarnpkg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/yarnpkg/yarn/releases/download/v1.6.0/yarn-v1.6.0.tar.gz",
                    "sha256": "a57b2fdb2bfeeb083d45a883bc29af94d5e83a21c25f3fc001c295938e988509"
                }
            ] 
        },
        {
            "name": "lbry-app",
            "build-options" : {
                "env": {
                    "electron_config_cache": "/run/build/lbry-app/electron-cache",
                    "npm_config_nodedir": "/run/build/lbry-app/node-js-headers"
                }
            },
            "buildsystem": "simple",
            "build-commands": [
                "yarn cache clean --offline",
                "yarn install --offline --cwd /run/build/lbry-app/main",
                "mkdir -p /app/main",
                "cp -ra main/* /app/main/",
                "install -D lbry-app /app/bin/lbry-app",
                "install -Dm644 io.lbry.lbry-app.desktop /app/share/applications/io.lbry.lbry-app.desktop",
                "install -Dm644 io.lbry.lbry-app.appdata.xml /app/share/appdata/io.lbry.lbry-app.appdata.xml",
                "install -Dm644 main/build/icons/32x32.png /app/share/icons/hicolor/32x32/apps/io.lbry.lbry-app.png",
                "install -Dm644 main/build/icons/48x48.png /app/share/icons/hicolor/48x48/apps/io.lbry.lbry-app.png",
                "install -Dm644 main/build/icons/96x96.png /app/share/icons/hicolor/96x96/apps/io.lbry.lbry-app.png",
                "install -Dm644 main/build/icons/128x128.png /app/share/icons/hicolor/128x128/apps/io.lbry.lbry-app.png",
                "install -Dm644 main/build/icons/256x256.png /app/share/icons/hicolor/256x256/apps/io.lbry.lbry-app.png"
            ],
            "sources": [
                "generated-sources.json",
                {
                    "type": "archive",
                    "url": "https://github.com/lbryio/lbry-app/archive/v0.21.3.tar.gz",
                    "sha256": "1a8d602a6d6d23f9900d3eeb0d2ac578fed5d5c485acc11227161d1cd63e698a",
                    "dest": "main"
                },
                {
                    "type": "script",
                    "dest": "main",
                    "dest-filename": ".yarnrc",
                    "commands": [
                        "# THIS IS AN AUTOGENERATED FILE. DO NOT EDIT THIS FILE DIRECTLY.",
                        "# yarn lockfile v1",
                        "",
                        "",
                        "yarn-offline-mirror \"/run/build/lbry-app/yarn-mirror\"",
                        "yarn-offline-mirror-pruning true"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://nodejs.org/download/release/v8.9.2/node-v8.9.2-headers.tar.gz",
                    "sha256": "35ac226795678ef2b9a8f55c3eb65984bb49f71858e771c9719452d14926e83e",
                    "dest": "node-js-headers"
                },
                {
                    "type": "script",
                    "dest-filename": "lbry-app",
                    "commands": [
                        "yarn start --cwd=/app/main \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "io.lbry.lbry-app.desktop"
                },
                {
                    "type": "file",
                    "path": "io.lbry.lbry-app.appdata.xml"
                }
            ]
        }
    ]
}
